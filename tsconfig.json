{
  "compilerOptions": {
    "lib": [
      "es2016",
      "es2017",
      "dom"
    ],
    "strict": true,
    "jsx": "react",
    "module": "es6",
    "target": "es5",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist/",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./src/**/*",
  ],
  "exclude": [
    "next.config.js"
  ],
}